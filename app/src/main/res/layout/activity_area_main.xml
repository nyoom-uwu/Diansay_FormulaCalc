<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Area_Main">

    <Button
        android:id="@+id/btn_tri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#C71585"
        android:fontFamily="@font/metavers"
        android:text="Triangle"
        app:layout_constraintBottom_toTopOf="@+id/btn_rec"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_rec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#C71585"
        android:fontFamily="@font/metavers"
        android:text="Rectangle"
        app:layout_constraintBottom_toTopOf="@+id/btn_cir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_tri" />

    <Button
        android:id="@+id/btn_cir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#C71585"
        android:fontFamily="@font/metavers"
        android:text="Circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_rec" />
</androidx.constraintlayout.widget.ConstraintLayout>